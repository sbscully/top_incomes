#!/usr/bin/env perl

use strict;
use warnings;

use lib 'lib';
use feature 'say';

use Spreadsheet::Read;
use JSON::XS;
use File::Slurp;
use Data::Dumper;
use Pipeline;
use Pipeline::Traverse qw(fetch at hashref arrayref);
use Pipeline::List qw(transpose);

{
  my $in = 'data/raw.xlsx';
  my $out = 'data/extracted.json';

  say "extracting JSON file $out from excel file $in...";

  if (-f $out) { unlink $out }

  pipeline ReadData($in) =>
    qw(remove_meta_data extract_table encode_json),
    curry('write_file', $out);

  say "extract stage complete"
}

sub remove_meta_data {
  my ($meta, @rest) = @_; say Dumper($meta); @rest
}

# Munge the Spreadsheet::Read output to get at the raw data table
sub extract_table {
  pipeline @_ => at(1), fetch('cell'), 'transpose', sub { [ splice @_, 2 ] }
}